    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nomeUsuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.chaveUsuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.senhaUsuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.perfilUsuario.tipoPerfil)
        </th>
        <th></th>
