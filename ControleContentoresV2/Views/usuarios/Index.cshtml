@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.nomeUsuario)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.chaveUsuario)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.senhaUsuario)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.perfilUsuario.tipoPerfil)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.idUsuario }) |
        @Html.ActionLink("Details", "Details", new { id = item.idUsuario }) |
